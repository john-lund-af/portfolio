<!--Card-->
<div class="card">
  <a class="link" target="_blank" href="<%=experience.href%>"></a>
  <div class="date upper">
    <%= experience.start_date %> — <%= experience.end_date %>
  </div>


  <div class="content">
    <div class="card-header">
      <div class="title"><a target="_blank" href="<%=experience.href%>">
          <%= experience.position %> — <%= experience.company_name %>
        </a></div>
    </div>
    <div class="card-text">
      <p>
        <%= experience.description %>
      </p>
    </div>
    <div class="card-footer">
      <ul class="keywords">
        <% experience.keywords.forEach(function(keyword) { %>
          <li>
            <%= keyword %>
          </li>
          <% }) %>
      </ul>
    </div>
  </div>

</div>
<!--END Card-->